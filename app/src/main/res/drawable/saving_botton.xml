<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- press true -->
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <gradient
                 android:startColor="#33B5E5"
                android:endColor="#33B5E5"
                android:centerColor="#33B5E5"
                android:angle="90" />
            <stroke
                android:color="#669900"
                android:width="2dp" />
            <!--<corners-->
                <!--android:radius="360dp" />-->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- press false -->
    <item android:state_pressed="false">

        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#33B5E5"
                android:endColor="#33B5E5"
                android:centerColor="#33B5E5"
                android:angle="90" />
            <stroke
                android:color="#33B5E5"
                android:width="3dp" />
            <!--<corners-->
                <!--android:radius="360dp" />-->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>

    </item>
</selector>